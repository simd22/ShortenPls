<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>
    <div class="container">
        <h1 class="text-secondary" style="font-weight: bold; padding-top: 50px;">Welcome to Shorten Pls</h1>
        <form action="/shortUrls" method="POST" class="my-4">
            <div style="display: flex; align-items: center;">
                <label for="fullUrl" class="visually-hidden">Url</label>
                <input required placeholder="Insert your URL here!" type="url" name="fullUrl" id="fullUrl" class="form-control" style="margin-right: 10px;">
                <button class="btn btn-secondary" type="submit">Shrink</button>
            </div>
        </form>
        
        <table class="table table-striped table-responsive" style="border: 1px solid #ddd;">
            <thead>
                <tr>
                    <th style="max-width: 200px;">Full URL</th>
                    <th style="max-width: 200px;">Short URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            
            <tbody>
                <% shortUrls.forEach(shortUrl => { %>
                    <tr>
                        <td style="max-width: 200px; word-wrap: break-word; border: 1px solid #ddd;"><a href="<%= shortUrl.full %>" style="color: #5b53e2;"><%= shortUrl.full %></a></td>
                        <td style="max-width: 200px; word-wrap: break-word; border: 1px solid #ddd;"><a href="<%= shortUrl.short %>" style="color: #2ce181;"><%= shortUrl.short %></a></td>
                        <td style="border: 1px solid #ddd;"><%= shortUrl.clicks %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        
    </div>
</body>
</html>